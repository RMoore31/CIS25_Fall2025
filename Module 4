#include <iostream>
using namespace std;

int main() {
  int choice;

  cout << "1. Add Item\n";
  cout << "2. View Item\n";
  cout << "3. Exit\n";
  cout << "Enter your chpice (1-3): ";
  cin >> choice;

  if (choice == 1) {
    cout << "\You selected: Add Item\n";
  }
  if (choice == 2) {
    cout << "\You selected: View Item\n';
  }
  if (choice == 3) {
    cout << "\nExiting program... Goodbye!\n;
  }

return 0;
}
