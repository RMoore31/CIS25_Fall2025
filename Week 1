#include <iostream>
using namespace std;

int main() {
  cout << "Hello Inventory System!\n";

  cout << "Data type size:\n";
  cout << "\tSize of int: " << sizeof(int) << " bytes\n";
  cout << "\tSize of float: " << sizeof(float) << " bytes\n";
  cout << "\tSize of char: " << sizeof(char) << " bytes\n";

return 0;
}
